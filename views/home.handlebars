<section class="section is-large has-background-light pt-6">
    <div class="container">
        <div class="notification is-warning">
            <button class="delete"></button><b>
            Psst! You can <a href='/user/{{user.username}}'>visit your profile</a> to customize your profile and add a custom avatar üòâ</b>
        </div>
        <h2 class="title mb-6 pb-6">Welcome Back, {{user.first_name}} üòÄ</h2>
        <h2 class="title has-text-centered">Top Topics Today üî•</h2>
        <div class="box is-flex is-justify-content-center">
        <table class="table" style="width: 100%;">
            <div class="thead">
                <tr>
                    <th>Rank</th>
                    <th>Community</th>
                    <th>Price</th>
                    <th>{{!-- 24h volume --}}</th>
                    <th>Total volume</th>
                    <th>Posts</th>
                </tr>
            </div>
            <div class="tbody">
                {{#each topTopics as |topic|}}
                <tr {{#if @first}}class="is-selected"{{/if}}>
                    <th>{{addToIndex @index}}</th>
                    <td><a href="/topic/{{topic.id}}">{{topic.topic_name}} {{#if @first}}üèÜüî•üî•üî•{{/if}}</a></td>
                    <td>{{#if topic.last_traded_price}}
                            ${{topic.last_traded_price}}
                        {{/if}}
                        {{#unless topic.last_traded_price}}
                            ${{topic.price}}
                        {{/unless}}
                    </td>
                    <td></td>
                    <td>${{format_amount topic.volume}}</td>
                    <td>{{topic.number_posts}}</td>
                </tr>
                {{/each}}
            </div>
        </table>
        </div>
    </div>
</section>


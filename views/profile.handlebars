<section class='section'>
    <div class='container'>
        <div class='columns'>
            <div class='column is-narrow'>
                <figure class='image is-128x128 is-rounded'>
                    <img src='{{imageURI}}' alt='Profile Picture' />
                </figure>
                <nav class='level py-4'>
                    <div class='level-left'>
                        <div class='level-item'>
                            <button class='button edit-profile-button is-primary'>Edit</button>
                        </div>
                    </div>
                </nav>
            </div>
            <div class='column is-half'>
                <p class='title'>{{user.first_name}} {{user.last_name}}</p>
                <p class='subtitle'>@{{user.username}}</p>
                <p class="subtitle">
                    {{user.bio}}</p>
                <div class="tag is-medium"><p><strong>Balance:</strong> ${{user.balance}}</p></div>
            </div>
        </div>
        <hr />
    </div>

</section>

<section class="section">
    <div class="container">
        <h2 class="title has-text-centered">Portfolio</h2>

        {{#unless topics}}
            <div class="notification is-warning is-light">
            Uh oh, it looks like you don't have any content to display. Don't worry, we've got your back. <a href="/explore">Head on over to our <b>Explore</b> page</a> to find some new and exciting things to fill up this empty space!
            </div>
        {{/unless}}
        {{#each topics}}   
            <div class="card is-primary">
            <header class="card-header">
                <p class="card-header-title">
                <a href="/topic/{{id}}">{{topic_name}}</a>
                </p>
                <button class="card-header-icon" aria-label="more options">
                <span class="icon">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                </span>
                </button>
            </header>
            <footer class="card-footer">
                <a href="#" class="card-footer-item">Shares Owned ðŸ’¼: {{format_amount shareDetails.quantity}}</a>
                <a href="#" class="card-footer-item">Price Per Share ðŸ’²: {{#if last_traded_price}}${{last_traded_price}}{{/if}}{{#unless last_traded_price}}${{price}}{{/unless}}</a>
                <a href="#" class="card-footer-item">Total Value ðŸ¤‘: {{#if last_traded_price}}${{calculateValue shareDetails.quantity last_traded_price}}{{/if}}{{#unless last_traded_price}}${{calculateValue shareDetails.quantity price}}{{/unless}}</a>
                <a href="#" class="card-footer-item">Total Volume ðŸ“Š: ${{format_amount volume}}</a>
            </footer>
            <footer class="card-footer">
                <div class="card-footer-item"><button class="button is-success mx-2 main-buy-button" data-topicID="{{id}}">Buy</button><button class="button is-danger mx-2 main-sell-button" data-topicID="{{id}}">Sell</button></div>
            </footer>
            </div>
            <hr>
        {{/each}}
    </div>
</section>


        

